{{ ansible_managed | comment }}

[zfs]
name            = ZFS on Linux for EL{{ ansible_distribution_version }} - dkms
baseurl         = {{ zfs_centos_repo_dkms_url }}
enabled         = {{ (zfs_centos_style == 'dkms') | ternary(1,0) }}
metadata_expire = 7d
gpgcheck        = 1
gpgkey          = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-zfsonlinux

[zfs-kmod]
name            = ZFS on Linux for EL{{ ansible_distribution_version }} - kmod
baseurl         = {{ zfs_centos_repo_kmod_url }}
enabled         = {{ (zfs_centos_style == 'kmod') | ternary(1,0) }}
metadata_expire = 7d
gpgcheck        = 1
gpgkey          = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-zfsonlinux
