{{ ansible_managed | comment }}

[zfs]
name=ZFS on Linux for EL{{ ansible_distribution_version }} - dkms
baseurl=http://download.zfsonlinux.org/epel/{{ ansible_distribution_version }}/$basearch/
enabled={{ (zfs_centos_repo == 'zfs') | ternary(1,0) }}
metadata_expire=7d
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-zfsonlinux

[zfs-kmod]
name=ZFS on Linux for EL{{ ansible_distribution_version }} - kmod
