{{ ansible_managed | comment }}

[zfs]
name            = ZFS on Linux for EL{{ ansible_distribution_version }} - dkms
baseurl         = {{ zfs_redhat_repo_dkms_url }}
enabled         = {{ (zfs_redhat_style == 'dkms') | ternary(1,0) }}
metadata_expire = 7d
gpgcheck        = 1
gpgkey          = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-zfsonlinux
{% if zfs_redhat_repo_proxy | default('') %}
proxy           = {{ zfs_redhat_repo_proxy }}
{% endif %}

[zfs-kmod]
name            = ZFS on Linux for EL{{ ansible_distribution_version }} - kmod
baseurl         = {{ zfs_redhat_repo_kmod_url }}
enabled         = {{ (zfs_redhat_style == 'kmod') | ternary(1,0) }}
metadata_expire = 7d
gpgcheck        = 1
gpgkey          = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-zfsonlinux
{% if zfs_redhat_repo_proxy | default('') %}
proxy           = {{ zfs_redhat_repo_proxy }}
{% endif %}
